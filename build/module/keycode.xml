<?xml version="1.0" encoding="UTF-8"?>
<module name="keycode" path="../../keycode">
  <header-path path="include" public="true"/>
  <group path="include/keycode">
    <src path="keycode.h"/>
    <src path="keyid.h"/>
    <src path="keytable.h"/>
  </group>
  <group path="src">
    <src path="keyid.c"/>
    <switch value="$os">
      <case value="linux">
	<src path="keytable_evdev.c"/>
      </case>
      <case value="osx">
	<src path="keytable_mac.c"/>
      </case>
      <case value="windows">
	<src path="keytable_win.c"/>
      </case>
    </switch>
  </group>
</module>
