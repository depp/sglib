<?xml version="1.0" encoding="UTF-8"?>
<module type="multi">
  <key name="desc">Math library</key>

  <switch value="$os">
    <case value="osx|windows">
      <!-- No special flags needed -->
      <module type="null"/>
    </case>
    <case value="linux">
      <module type="library-search">
        <key name="source.language">c</key>
        <key name="source.prologue">
#include &lt;math.h&gt;
        </key>
        <key name="source.body">
    double x = strtod(argv[1], 0);
    printf("sin(%g) = %g\n", sin(x));
        </key>
        <key name="flags.1.LIBS">-lm</key>
      </module>
    </case>
  </switch>
</module>
